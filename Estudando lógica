#include <stdio.h>

int main()
{
    float n = 1;
    float d = 2;
    float s = 0;
    
    for (int i = 0; i < 50; i++){
        printf("\n%f/%f", n, d);
        if(i % 2 == 0)
            s += n/d;
        else
            s -= n/d;
        n += 2;
        d *= 2;
        }
        
    printf("\n%f", s);
    

    return 0;
}
