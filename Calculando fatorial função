#include <stdio.h>

long long fatorial()
{
    int n;
    long long fat = 1;
    
    printf("Digite um numero n: ");
    scanf("%d", &n);
    
    if(n == 0){
        return 1;
    }
    else if (n > 0){
        while(n>0)
            fat *= n--;
        return fat;
        }
    else
        return -1;
}

    int main()
{
    long long f;

    f = fatorial();
    printf("%lld", f);
}
